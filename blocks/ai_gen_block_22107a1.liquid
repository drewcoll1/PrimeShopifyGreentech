{% doc %}
  @prompt
    ok so i would like three different images with a button below each, i would like for all the images to be on the same line horizontal, I need 4 images and buttons, please make it so the images fit not cover

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-four-images-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.section_padding }}px;
    align-items: flex-start;
  }

  .ai-image-item-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;}

  .ai-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: {{ block.settings.button_spacing }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.image_background_color }};
  }

  .ai-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: contain;
    display: block;
  }

  .ai-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    color: #cccccc;
  }

  .ai-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-four-images-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'stack' %}
        flex-direction: column;
      {% elsif block.settings.mobile_layout == 'two-columns' %}
        flex-wrap: wrap;
      {% endif %}
      gap: {{ block.settings.spacing | times: 0.75 }}px;
    }

    {% if block.settings.mobile_layout == 'two-columns' %}
      .ai-image-item-{{ ai_gen_id }} {
        flex: 0 0 calc(50% - {{ block.settings.spacing | times: 0.375 }}px);
      }
    {% endif %}
  }

  @media screen and (max-width: 480px) {
    {% if block.settings.mobile_layout == 'two-columns' %}
      .ai-four-images-{{ ai_gen_id }} {
        flex-direction: column;}
      .ai-image-item-{{ ai_gen_id }} {
        flex: 1;
      }
    {% endif %}
  }
{% endstyle %}

<div class="ai-four-images-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..4) %}
    {% liquid
      assign image_key = 'image_' | append: i
      assign button_text_key = 'button_text_' | append: i
      assign button_link_key = 'button_link_' | append: i
      
      assign image = block.settings[image_key]
      assign button_text = block.settings[button_text_key]
      assign button_link = block.settings[button_link_key]
    %}
    
    <div class="ai-image-item-{{ ai_gen_id }}">
      <div class="ai-image-wrapper-{{ ai_gen_id }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 600}}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ image.width }}"
            height="{{ image.height }}">
        {% else %}
          <div class="ai-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      
      {% if button_text != blank %}
        {% if button_link != blank %}
          <a href="{{ button_link }}" class="ai-button-{{ ai_gen_id }}">
            {{ button_text }}
          </a>
        {% else %}
          <button class="ai-button-{{ ai_gen_id }}">
            {{ button_text }}
          </button>
        {% endif %}
      {% endif %}
    </div>
  {% endfor %}
</div>

