    background: {{ block.settings.control_background }};
    color: {{ block.settings.control_text_color }};
    border: 2px solid {{ block.settings.control_border_color }};
    border-radius: {{ block.settings.control_border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: {{ block.settings.control_font_size }}px;
    font-weight: 500;
    text-transform: {{ block.settings.control_text_transform }};
  }

  .ai-category-carousel__control-btn-{{ ai_gen_id }}:hover {
    background: {{ block.settings.control_hover_background }};
    color: {{ block.settings.control_hover_text_color }};
    border-color: {{ block.settings.control_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-category-carousel__control-btn-{{ ai_gen_id }}.active {
    background: {{ block.settings.control_active_background }};
    color: {{ block.settings.control_active_text_color }};
    border-color: {{ block.settings.control_active_border_color }};
  }

