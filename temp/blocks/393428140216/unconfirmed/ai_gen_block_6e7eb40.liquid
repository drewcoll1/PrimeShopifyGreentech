{% doc %}
  @prompt
    can you make a custom thing that goes below the collection name for a description

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-description-{{ ai_gen_id }} {
    margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.max_width }}px;
    {% if block.settings.center_container %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .ai-collection-description__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }};
    font-family: var(--font-{{ block.settings.font_family }}-family);
    {% if block.settings.font_weight != 'default' %}
      font-weight: {{ block.settings.font_weight }};
    {% endif %}
    {% if block.settings.text_transform != 'none' %}
      text-transform: {{ block.settings.text_transform }};
    {% endif %}}

  .ai-collection-description__content-{{ ai_gen_id }} p {
    margin: 0 0 1em;}

  .ai-collection-description__content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-collection-description__content-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-collection-description__content-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-collection-description__empty-state-{{ ai_gen_id }} {
    color: #999;
    font-style: italic;
    padding: 20px;
    text-align: center;
    background-color: #f9f9f9;
    border-radius: 8px;
    border: 2px dashed #ddd;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-description-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.75 }}px {{ block.settings.padding_horizontal | times: 0.75 }}px;
      margin: {{ block.settings.margin_top | times: 0.75 }}px 0 {{ block.settings.margin_bottom | times: 0.75 }}px;
    }

    .ai-collection-description__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-collection-description-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.description != blank %}
    <div class="ai-collection-description__content-{{ ai_gen_id }}">
      {{ block.settings.description }}
    </div>
  {% else %}
    <div class="ai-collection-description__empty-state-{{ ai_gen_id }}">
      Add a custom description for your collection
    </div>
  {% endif %}
</div>

