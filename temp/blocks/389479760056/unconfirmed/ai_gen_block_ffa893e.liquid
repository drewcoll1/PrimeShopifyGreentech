{% doc %}
  @prompt
    ok so i would like three different images with a button below each, i would like for all the images to be on the same line horizontal, I need 4 images and buttons, please make it so the images fit not cover, please make it so i can change the boldness of the buttons

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-image-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .ai-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    margin-bottom: {{ block.settings.button_spacing }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .ai-image-wrapper-{{ ai_gen_id }} svg {
    width: 80%;
    height: 80%;
    opacity: 0.5;
  }

  .ai-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;min-width: 120px;
  }

  .ai-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 990px) {
    .ai-image-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-image-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.gap | times: 0.75 }}px;
      padding: {{ block.settings.padding | times: 0.75 }}px;
    }

    .ai-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.8 }}px;
    }

    .ai-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size | minus: 2 }}px;padding: {{ block.settings.button_padding_vertical | minus: 2 }}px {{ block.settings.button_padding_horizontal | minus: 4 }}px;
    }
  }
{% endstyle %}<div class="ai-image-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..4) %}
    {% liquid
      assign image_key = 'image_' | append: i
      assign button_text_key = 'button_text_' | append: i
      assign button_link_key = 'button_link_' | append: i
      assign image = block.settings[image_key]
      assign button_text = block.settings[button_text_key]
      assign button_link = block.settings[button_link_key]
    %}
    
    <div class="ai-image-item-{{ ai_gen_id }}">
      <div class="ai-image-wrapper-{{ ai_gen_id }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 600 }}"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ image.width }}"
            height="{{ image.height }}">
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
      </div>
      
      {% if button_text != blank %}
        {% if button_link != blank %}
          <a href="{{ button_link }}" class="ai-button-{{ ai_gen_id }}">
            {{ button_text }}
          </a>
        {% else %}
          <span class="ai-button-{{ ai_gen_id }}">
            {{ button_text }}
          </span>
        {% endif %}
      {% endif %}
    </div>
  {% endfor %}
</div>

