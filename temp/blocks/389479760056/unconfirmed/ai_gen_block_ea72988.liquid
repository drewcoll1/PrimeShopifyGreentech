{% doc %}
  @prompt
    lets start with giving me the exact layout for split showcase, There needs to be two images next to each other no words yet

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-showcase-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    min-height: {{ block.settings.section_height }}px;
    gap: {{ block.settings.image_gap }}px;}

  .ai-split-showcase__image-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .ai-split-showcase__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: {{ block.settings.section_height }}px;
  }

  .ai-split-showcase__image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-split-showcase__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: {{ block.settings.section_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-split-showcase__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  @media screen and (max-width: 768px) {
    .ai-split-showcase-{{ ai_gen_id }} {
      flex-direction: column;
      min-height: auto;
    }

    .ai-split-showcase__image-wrapper-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_image_height }}px;
    }

    .ai-split-showcase__image-placeholder-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_image_height }}px;
    }
  }
{% endstyle %}

<div class="ai-split-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-showcase__image-{{ ai_gen_id }}">
    <div class="ai-split-showcase__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image_1 %}
        <img
          src="{{ block.settings.image_1 | image_url: width: 800 }}"
          alt="{{ block.settings.image_1.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image_1.width }}"
          height="{{ block.settings.image_1.height }}"
        >
      {% else %}
        <div class="ai-split-showcase__image-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
  </div>

  <div class="ai-split-showcase__image-{{ ai_gen_id }}">
    <div class="ai-split-showcase__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image_2 %}
        <img
          src="{{ block.settings.image_2 | image_url: width: 800 }}"
          alt="{{ block.settings.image_2.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image_2.width }}"
          height="{{ block.settings.image_2.height }}"
        >
      {% else %}
        <div class="ai-split-showcase__image-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Split Showcase",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Left image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Right image"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Image height",
      "default": 400
    },
    {
      "type": "range",
      "id": "image_gap",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Gap between images",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Mobile Settings"
    },
    {
      "type": "range",
      "id": "mobile_image_height",
      "min": 150,
      "max": 400,
      "step": 25,
      "unit": "px",
      "label": "Mobile image height",
      "default": 250
    }
  ],
  "presets": [
    {
      "name": "Split Showcase"
    }
  ],
  "tag": null
}
{% endschema %}