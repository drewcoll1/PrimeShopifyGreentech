{% doc %}
  @prompt
    make a section with two images next to each other split showcase

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-showcase-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    min-height: {{ block.settings.section_height }}px;
    gap: {{ block.settings.gap }}px;}

  .ai-split-showcase__item-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;}

  .ai-split-showcase__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .ai-split-showcase__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-split-showcase__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-split-showcase__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.5;
  }

  .ai-split-showcase__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      {{ block.settings.overlay_direction }},
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 100%
    );
    display: flex;
    align-items: {{ block.settings.content_vertical_alignment }};
    justify-content: {{ block.settings.content_horizontal_alignment }};
    padding: 40px;
  }

  .ai-split-showcase__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    text-align: {{ block.settings.text_alignment }};
    max-width: 400px;
  }

  .ai-split-showcase__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .ai-split-showcase__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0 0 24px 0;
  }

  .ai-split-showcase__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-split-showcase__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-split-showcase-{{ ai_gen_id }} {
      flex-direction: column;
      min-height: auto;
    }

    .ai-split-showcase__item-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_height }}px;
    }

    .ai-split-showcase__overlay-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-split-showcase__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-split-showcase__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-split-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-showcase__item-{{ ai_gen_id }}">
    <div class="ai-split-showcase__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image_1 %}
        <img
          src="{{ block.settings.image_1 | image_url: width: 1000 }}"
          alt="{{ block.settings.image_1.alt | escape }}"
          class="ai-split-showcase__image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.image_1.width }}"
          height="{{ block.settings.image_1.height }}"
        >
      {% else %}
        <div class="ai-split-showcase__placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
    
    {% if block.settings.show_overlay_1 %}
      <div class="ai-split-showcase__overlay-{{ ai_gen_id }}">
        <div class="ai-split-showcase__content-{{ ai_gen_id }}">
          {% if block.settings.heading_1 != blank %}
            <h2 class="ai-split-showcase__heading-{{ ai_gen_id }}">{{ block.settings.heading_1 }}</h2>
          {% endif %}
          
          {% if block.settings.text_1 != blank %}
            <div class="ai-split-showcase__text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</div>
          {% endif %}
          
          {% if block.settings.button_text_1 != blank and block.settings.button_link_1 != blank %}
            <a href="{{ block.settings.button_link_1 }}" class="ai-split-showcase__button-{{ ai_gen_id }}">
              {{ block.settings.button_text_1 }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-split-showcase__item-{{ ai_gen_id }}">
    <div class="ai-split-showcase__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image_2 %}
        <img
          src="{{ block.settings.image_2 | image_url: width: 1000 }}"
          alt="{{ block.settings.image_2.alt | escape }}"
          class="ai-split-showcase__image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.image_2.width }}"
          height="{{ block.settings.image_2.height }}"
        >
      {% else %}
        <div class="ai-split-showcase__placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
    
    {% if block.settings.show_overlay_2 %}
      <div class="ai-split-showcase__overlay-{{ ai_gen_id }}">
        <div class="ai-split-showcase__content-{{ ai_gen_id }}">
          {% if block.settings.heading_2 != blank %}
            <h2 class="ai-split-showcase__heading-{{ ai_gen_id }}">{{ block.settings.heading_2 }}</h2>
          {% endif %}
          
          {% if block.settings.text_2 != blank %}
            <div class="ai-split-showcase__text-{{ ai_gen_id }}">{{ block.settings.text_2 }}</div>
          {% endif %}
          
          {% if block.settings.button_text_2 != blank and block.settings.button_link_2 != blank %}
            <a href="{{ block.settings.button_link_2 }}" class="ai-split-showcase__button-{{ ai_gen_id }}">
              {{ block.settings.button_text_2 }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

