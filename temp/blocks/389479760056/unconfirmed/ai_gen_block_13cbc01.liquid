        {% endif %}
      </div>

      {% if block.settings.show_newsletter %}
        <div class="ai-custom-footer-column-{{ ai_gen_id }}">
          {% if block.settings.newsletter_heading != blank %}
            <h3 class="ai-custom-footer-heading-{{ ai_gen_id }}">{{ block.settings.newsletter_heading }}</h3>
          {% endif %}
          {% if block.settings.newsletter_text != blank %}
            <p class="ai-custom-footer-text-{{ ai_gen_id }}">{{ block.settings.newsletter_text }}</p>
          {% endif %}
          {%- form 'customer' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="ai-custom-footer-newsletter-{{ ai_gen_id }}">
              <input
                type="email"
                name="contact[email]"
                class="ai-custom-footer-newsletter-input-{{ ai_gen_id }}"
                placeholder="{{ block.settings.newsletter_placeholder }}"
                aria-label="Email address"
                required
              >
              <button
                type="submit"
                class="ai-custom-footer-newsletter-button-{{ ai_gen_id }}"
              >
                {{ block.settings.newsletter_button_text }}
              </button>
            </div>
          {%- endform -%}
        </div>
      {% endif %}
    </div>

    <div class="ai-custom-footer-bottom-{{ ai_gen_id }}">
