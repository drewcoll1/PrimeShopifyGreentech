{% doc %}
  @prompt
    make me a custom footer

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-custom-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
  }

  .ai-custom-footer-container-{{ ai_gen_id }} {
    max-width:1200px;
    margin: 0 auto;
  }

  .ai-custom-footer-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: 40px;
    margin-bottom: 40px;
  }

  .ai-custom-footer-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-custom-footer-logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
  }

  .ai-custom-footer-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: 60px;
    background-color: {{ block.settings.text_color }};
    opacity: 0.1;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-custom-footer-logo-placeholder-{{ ai_gen_id }} svg {
    width: 80%;
    height: 80%;
    opacity: 0.5;
  }

  .ai-custom-footer-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0;
    color: {{ block.settings.heading_color }};
  }

  .ai-custom-footer-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  .ai-custom-footer-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.text_size }}px;
    transition: color 0.3s ease;
  }

  .ai-custom-footer-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-custom-footer-social-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .ai-custom-footer-social-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: {{ block.settings.social_bg_color }};
    color: {{ block.settings.social_icon_color }};
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .ai-custom-footer-social-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.social_hover_bg_color }};
    color: {{ block.settings.social_hover_icon_color }};
    transform: translateY(-2px);
  }

  .ai-custom-footer-social-link-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-custom-footer-newsletter-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    margin-top: 12px;
  }

  .ai-custom-footer-newsletter-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_bg_color }};
    color: {{ block.settings.text_color }};
    font-size:14px;
  }

  .ai-custom-footer-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-custom-footer-newsletter-button-{{ ai_gen_id }} {
    padding: 12px 20px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-custom-footer-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  .ai-custom-footer-bottom-{{ ai_gen_id }} {
    border-top: 1px solid {{ block.settings.border_color }};
    padding-top: 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;gap: 16px;
  }

  .ai-custom-footer-copyright-{{ ai_gen_id }} {
    font-size: {{ block.settings.copyright_size }}px;
    opacity: 0.8;
  }

  .ai-custom-footer-payment-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;align-items: center;
  }

  .ai-custom-footer-payment-icon-{{ ai_gen_id }} {
    width: 32px;
    height: 20px;
    background-color: {{ block.settings.text_color }};
    opacity: 0.6;
    border-radius: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 8px;
    font-weight: bold;
  }

  @media screen and (max-width: 768px) {
    .ai-custom-footer-content-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);gap: 24px;
    }

    .ai-custom-footer-newsletter-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-custom-footer-bottom-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
    }

    .ai-custom-footer-social-{{ ai_gen_id }} {
      justify-content: center;
    }
  }
{% endstyle %}

