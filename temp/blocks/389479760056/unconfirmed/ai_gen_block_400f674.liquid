{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    min-height: {{ block.settings.section_height }}px;
    display: flex;
    align-items: center;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-hero-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 0.8fr 2fr;
    gap: 0;
    align-items: center;
    height: 100%;
  }

  .ai-hero-text-box-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    background-color: {{ block.settings.text_box_background }};
    padding: {{ block.settings.text_box_padding }}px;
    border-radius: {{ block.settings.text_box_border_radius }}px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transform: translateX({{ block.settings.text_box_overlap }}px);
    max-width: 500px;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    margin: 0 0 16px 0;
    font-weight: 700;
  }

  .ai-hero-subtext-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0 0 24px 0;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 16px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }

  .ai-hero-image-box-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.image_box_background }};
    border-radius: {{ block.settings.image_box_border_radius }}px;
    padding: {{ block.settings.image_box_padding }}px;
    height: {{ block.settings.image_box_height }}px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .ai-hero-slide-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity {{ block.settings.transition_duration }}s ease-in-out;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .ai-hero-slide-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: 70%;
    object-fit: contain;
    margin-bottom: 20px;
    border-radius: 8px;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 70%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    border-radius: 8px;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 80%;
    height: 80%;
    object-fit: contain;
  }

  .ai-hero-slide-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.slide_button_background }};
    color: {{ block.settings.slide_button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.slide_button_border_radius }}px;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .ai-hero-slide-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.slide_button_hover_background }};
    transform: translateY(-1px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  @media screen and (max-width: 768px) {
    .ai-hero-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-hero-text-box-{{ ai_gen_id }} {
      transform: translateX(0);
      order: 2;
      max-width: 100%;
    }

    .ai-hero-image-box-{{ ai_gen_id }} {
      order: 1;
      height: 300px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-hero-subtext-{{ ai_gen_id }} {
