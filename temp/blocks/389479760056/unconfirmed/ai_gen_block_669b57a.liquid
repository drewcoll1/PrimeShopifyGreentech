            {% if block.settings.bottom_youtube_url != blank %}
              <a href="{{ block.settings.bottom_youtube_url }}" class="ai-custom-footer__bottom-social-link-{{ ai_gen_id }}" aria-label="YouTube">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>

      <div class="ai-custom-footer__bottom-right-{{ ai_gen_id }}">
        <p class="ai-custom-footer__copyright-{{ ai_gen_id }}">
          {{ block.settings.copyright_text | replace: '[year]', 'now' | date: '%Y' | replace: '[shop_name]', shop.name }}
        </p>

        {% if block.settings.show_payment_icons %}
          <div class="ai-custom-footer__payment-{{ ai_gen_id }}">
            <div class="ai-custom-footer__payment-icon-{{ ai_gen_id }}">VISA</div>
            <div class="ai-custom-footer__payment-icon-{{ ai_gen_id }}">MC</div>
            <div class="ai-custom-footer__payment-icon-{{ ai_gen_id }}">AMEX</div>
            <div class="ai-custom-footer__payment-icon-{{ ai_gen_id }}">PP</div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width footer",
      "default": true
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 1000,
      "max": 2000,
      "step": 50,
      "unit": "px",
      "label": "Maximum content width",
      "default": 1400
    },
