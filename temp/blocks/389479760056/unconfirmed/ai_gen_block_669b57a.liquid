{% doc %}
  @prompt
    make me a custom footer, i want it to span the entire width of the page, ok great now just do quick links and a search, remove stay updated and customer care, ok so in the copyright section add another logo and below it social media tags

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-custom-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    width: 100%;
  }

  .ai-custom-footer__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding:0 20px;
  }

  .ai-custom-footer__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 40px;
  }

  .ai-custom-footer__column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-custom-footer__logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
  }

  .ai-custom-footer__logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: 60px;
    background-color: {{ block.settings.text_color }};
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-custom-footer__logo-placeholder-{{ ai_gen_id }} svg {
    width: 80%;
    height: 80%;
    opacity: 0.7;
  }

  .ai-custom-footer__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0;
    color: {{ block.settings.heading_color }};
    text-transform: {{ block.settings.heading_case }};
  }

  .ai-custom-footer__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  .ai-custom-footer__nav-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-custom-footer__nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.text_size }}px;
    transition: color 0.3s ease;
  }

  .ai-custom-footer__nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-custom-footer__social-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    align-items: center;
  }

  .ai-custom-footer__social-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: {{ block.settings.social_bg_color }};
    color: {{ block.settings.social_icon_color }};
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .ai-custom-footer__social-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.social_hover_bg_color }};
    color: {{ block.settings.social_hover_icon_color }};
    transform: translateY(-2px);
  }

  .ai-custom-footer__social-link-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-custom-footer__search-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    margin-top: 16px;
  }

  .ai-custom-footer__search-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_bg_color }};
    color: {{ block.settings.input_text_color }};
    font-size: 14px;
  }

  .ai-custom-footer__search-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
  }

  .ai-custom-footer__search-button-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-custom-footer__search-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  .ai-custom-footer__bottom-{{ ai_gen_id }} {
    border-top: 1px solid {{ block.settings.border_color }};
    padding-top: 30px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 20px;
  }

  .ai-custom-footer__bottom-left-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: flex-start;
  }

  .ai-custom-footer__bottom-logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.bottom_logo_width }}px;
    height: auto;
  }

  .ai-custom-footer__bottom-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.bottom_logo_width }}px;
    height: 50px;
    background-color: {{ block.settings.text_color }};
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-custom-footer__bottom-logo-placeholder-{{ ai_gen_id }} svg {
    width: 80%;
    height: 80%;
    opacity: 0.7;
  }

  .ai-custom-footer__bottom-social-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .ai-custom-footer__bottom-social-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background-color: {{ block.settings.bottom_social_bg_color }};
    color: {{ block.settings.bottom_social_icon_color }};
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .ai-custom-footer__bottom-social-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.bottom_social_hover_bg_color }};
    color: {{ block.settings.bottom_social_hover_icon_color }};
    transform: translateY(-2px);
  }

  .ai-custom-footer__bottom-social-link-{{ ai_gen_id }} svg {
    width: 18px;
    height: 18px;
  }

  .ai-custom-footer__bottom-right-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: flex-end;
  }

  .ai-custom-footer__copyright-{{ ai_gen_id }} {
    font-size: {{ block.settings.copyright_size }}px;
    color: {{ block.settings.copyright_color }};
    margin: 0;
  }

  .ai-custom-footer__payment-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .ai-custom-footer__payment-icon-{{ ai_gen_id }} {
    width: 40px;
    height: 24px;
    background-color: {{ block.settings.payment_bg_color }};
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
    font-weight: bold;
    color: {{ block.settings.payment_text_color }};
  }

  {% if block.settings.full_width %}
    .ai-custom-footer__container-{{ ai_gen_id }} {
      max-width: none;
      padding: 0 {{ block.settings.edge_padding }}px;
    }
  {% endif %}

  @media screen and (max-width: 768px) {
    .ai-custom-footer__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-custom-footer__bottom-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;align-items: center;
    }

    .ai-custom-footer__bottom-left-{{ ai_gen_id }} {
      align-items: center;
    }

    .ai-custom-footer__bottom-right-{{ ai_gen_id }} {
      align-items: center;
    }

    .ai-custom-footer__search-{{ ai_gen_id }} {
      flex-direction: column;}

    .ai-custom-footer__container-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.mobile_edge_padding }}px;
    }
  }
{% endstyle %}

<footer class="ai-custom-footer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
