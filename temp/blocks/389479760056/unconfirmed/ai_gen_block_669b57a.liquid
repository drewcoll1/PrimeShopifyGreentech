                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>

      {% if block.settings.show_quick_links %}
        <div class="ai-custom-footer__column-{{ ai_gen_id }}">
          <h3 class="ai-custom-footer__heading-{{ ai_gen_id }}">{{ block.settings.quick_links_title }}</h3>
          <nav>
            <ul class="ai-custom-footer__nav-{{ ai_gen_id }}">
              {% for link in linklists[block.settings.quick_links_menu].links %}
                <li><a href="{{ link.url }}" class="ai-custom-footer__nav-link-{{ ai_gen_id }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </nav>
        </div>
      {% endif %}

      {% if block.settings.show_search %}
        <div class="ai-custom-footer__column-{{ ai_gen_id }}">
          <h3 class="ai-custom-footer__heading-{{ ai_gen_id }}">{{ block.settings.search_title }}</h3>
          {% if block.settings.search_text != blank %}
            <p class="ai-custom-footer__text-{{ ai_gen_id }}">{{ block.settings.search_text }}</p>
          {% endif %}
          <form action="{{ routes.search_url }}" method="get" role="search">
            <div class="ai-custom-footer__search-{{ ai_gen_id }}">
              <input
                type="search"
                name="q"
                class="ai-custom-footer__search-input-{{ ai_gen_id }}"
                placeholder="{{ block.settings.search_placeholder }}"
                aria-label="Search products"
                value="{{ search.terms | escape }}"
              >
              <button
                type="submit"
                class="ai-custom-footer__search-button-{{ ai_gen_id }}"
              >
                {{ block.settings.search_button_text }}
              </button>
            </div>
          </form>
        </div>
      {% endif %}
    </div>

    <div class="ai-custom-footer__bottom-{{ ai_gen_id }}">
      <div class="ai-custom-footer__bottom-left-{{ ai_gen_id }}">
        {% if block.settings.show_bottom_logo %}
          {% if block.settings.bottom_logo %}
            <img
              src="{{ block.settings.bottom_logo | image_url: width: 300}}"
              alt="{{ shop.name }}"
              class="ai-custom-footer__bottom-logo-{{ ai_gen_id }}"
              width="{{ block.settings.bottom_logo_width }}"
              height="auto"
              loading="lazy"
            >
          {% else %}
            <div class="ai-custom-footer__bottom-logo-placeholder-{{ ai_gen_id }}">
              {{'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        {% endif %}

        {% if block.settings.show_bottom_social %}
          <div class="ai-custom-footer__bottom-social-{{ ai_gen_id }}">
            {% if block.settings.bottom_facebook_url != blank %}
              <a href="{{ block.settings.bottom_facebook_url }}" class="ai-custom-footer__bottom-social-link-{{ ai_gen_id }}" aria-label="Facebook">
                <svg viewBox="0 0 24 24" fill="currentColor">
