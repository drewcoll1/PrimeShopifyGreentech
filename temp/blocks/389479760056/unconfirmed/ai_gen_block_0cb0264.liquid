{% doc %}
  @prompt
    lets start with giving me the exact layout for split showcase

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-showcase-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    min-height: {{ block.settings.section_height }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-split-showcase__container-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    {% if block.settings.layout == 'image_left' %}
      flex-direction: row;
    {% else %}
      flex-direction: row-reverse;
    {% endif %}
  }

  .ai-split-showcase__image-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .ai-split-showcase__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: {{ block.settings.section_height }}px;
  }

  .ai-split-showcase__image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-split-showcase__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: {{ block.settings.section_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-split-showcase__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-split-showcase__content-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: {% if block.settings.text_alignment == 'left' %}flex-start{% elsif block.settings.text_alignment == 'center' %}center{% else %}flex-end{% endif %};
    text-align: {{ block.settings.text_alignment }};
    background-color: {{ block.settings.content_background_color }};
  }

  .ai-split-showcase__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-split-showcase__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.6;
  }

  .ai-split-showcase__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    margin-top: {{ block.settings.text_spacing }}px;
  }

  .ai-split-showcase__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-split-showcase__container-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-split-showcase__image-wrapper-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_image_height }}px;
    }

    .ai-split-showcase__image-placeholder-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_image_height }}px;
    }

    .ai-split-showcase__content-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_content_padding }}px;
      text-align: {{ block.settings.mobile_text_alignment }};
      align-items: {% if block.settings.mobile_text_alignment == 'left' %}flex-start{% elsif block.settings.mobile_text_alignment == 'center' %}center{% else %}flex-end{% endif %};
    }

    .ai-split-showcase__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-split-showcase__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }
  }
{% endstyle %}

<div class="ai-split-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-showcase__container-{{ ai_gen_id }}">
    <div class="ai-split-showcase__image-{{ ai_gen_id }}">
      <div class="ai-split-showcase__image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1200 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        {% else %}
          <div class="ai-split-showcase__image-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-split-showcase__content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-split-showcase__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-split-showcase__text-{{ ai_gen_id }}">
          {{ block.settings.text }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-split-showcase__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

