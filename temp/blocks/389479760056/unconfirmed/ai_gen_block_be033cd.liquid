{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-dual-image-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-dual-image-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.gap }}px;
    max-width: {{ block.settings.max_width }}px;
    width: 100%;
    position: relative;
  }

  .ai-dual-image-item-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: {{ block.settings.image_height }}px;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-dual-image-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    z-index: 1;
  }

  .ai-dual-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-dual-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-dual-image-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-dual-image-text-content-{{ ai_gen_id }} {
    position: absolute;
    top: calc(50% + {{ block.settings.text_vertical_position }}px);
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
    text-align: center;
    color: {{ block.settings.text_color }};
    width: 100%;
    max-width: 600px;
    padding: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;}

  .ai-dual-image-logo-content-{{ ai_gen_id }} {
    position: absolute;
    top: calc(50% + {{ block.settings.logo_vertical_position }}px);
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
    text-align: center;
    width: 100%;
    max-width: 600px;
    padding: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ai-dual-image-logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    object-fit: contain;margin: 0 auto;
    display: block;
  }

  .ai-dual-image-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: {{ block.settings.logo_height }}px;
    background-color: rgba(255, 255, 255, 0.2);
    border: 2px dashed rgba(255, 255, 255, 0.5);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.7);
    font-size: 12px;
    text-align: center;
    margin: 0 auto;
  }

  .ai-dual-image-logo-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.5;
  }

  .ai-dual-image-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_font_weight }};
    font-style: {% if block.settings.text_italic %}italic{% else %}normal{% endif %};
    margin: 0;
    line-height: 1.4;
    text-align: center;}

  .ai-dual-image-button-content-{{ ai_gen_id }} {
    position: absolute;
    top: calc(50% + {{ block.settings.button_vertical_position }}px);
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
    text-align: center;
    width: 100%;
    max-width: 600px;
    padding: 30px;}

  .ai-dual-image-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;}

  .ai-dual-image-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 15px 30px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    font-style: {% if block.settings.button_italic %}italic{% else %}normal{% endif %};
    transition: all 0.3s ease;
  }

  .ai-dual-image-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    border-color: {{ block.settings.button_border_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-dual-image-container-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6}}px 15px;
    }

    .ai-dual-image-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.gap | times: 0.7}}px;
    }

    .ai-dual-image-item-{{ ai_gen_id }} {
      min-height: {{ block.settings.image_height | times: 0.8 }}px;
    }

    .ai-dual-image-text-content-{{ ai_gen_id }} {
      padding: 25px;
      max-width: 90%;
    }

    .ai-dual-image-logo-content-{{ ai_gen_id }} {
      padding: 25px;
      max-width: 90%;
    }

    .ai-dual-image-button-content-{{ ai_gen_id }} {
      padding: 25px;
      max-width: 90%;
    }

    .ai-dual-image-logo-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_width | times: 0.8 }}px;
    }

    .ai-dual-image-logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width | times: 0.8 }}px;
      height: {{ block.settings.logo_height | times: 0.8 }}px;
    }

    .ai-dual-image-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-dual-image-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
    }

    .ai-dual-image-button-{{ ai_gen_id }} {
      padding: 12px 24px;
      width: 100%;max-width: 250px;
    }
  }
{% endstyle %}

<div class="ai-dual-image-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-dual-image-{{ ai_gen_id }}">
    <div class="ai-dual-image-item-{{ ai_gen_id }}">
      {% if block.settings.image_1 %}
        <img
          src="{{ block.settings.image_1 | image_url: width:1200 }}"
          alt="{{ block.settings.image_1.alt | escape }}"
          class="ai-dual-image-background-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.image_1.width }}"
          height="{{ block.settings.image_1.height }}"
        >
      {% else %}
        <div class="ai-dual-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}<div class="ai-dual-image-overlay-{{ ai_gen_id }}"></div>
    </div>

    <div class="ai-dual-image-item-{{ ai_gen_id }}">
      {% if block.settings.image_2 %}
        <img
          src="{{ block.settings.image_2 | image_url: width: 1200 }}"
          alt="{{ block.settings.image_2.alt | escape }}"
          class="ai-dual-image-background-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.image_2.width }}"
          height="{{ block.settings.image_2.height }}"
        >
      {% else %}
        <div class="ai-dual-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-dual-image-overlay-{{ ai_gen_id }}"></div>
    </div>

    <div class="ai-dual-image-logo-content-{{ ai_gen_id }}">
      {% if block.settings.logo %}
        <img
          src="{{ block.settings.logo | image_url: width: 800 }}"
          alt="{{ block.settings.logo.alt | escape }}"
          class="ai-dual-image-logo-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.logo.width }}"
          height="{{ block.settings.logo.height }}"
        >
      {% else %}
        <div class="ai-dual-image-logo-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-dual-image-text-content-{{ ai_gen_id }}">
      {% if block.settings.text != blank %}
        <p class="ai-dual-image-text-{{ ai_gen_id }}">{{ block.settings.text }}</p>
      {% endif %}
    </div>

    <div class="ai-dual-image-button-content-{{ ai_gen_id }}">
      <div class="ai-dual-image-buttons-{{ ai_gen_id }}">
        {% if block.settings.button_text_1 != blank %}
          <a href="{{ block.settings.button_link_1 }}" class="ai-dual-image-button-{{ ai_gen_id }}">
            {{ block.settings.button_text_1 }}
          </a>
        {% endif %}
        {% if block.settings.button_text_2 != blank %}
          <a href="{{ block.settings.button_link_2 }}" class="ai-dual-image-button-{{ ai_gen_id }}">
            {{ block.settings.button_text_2 }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

