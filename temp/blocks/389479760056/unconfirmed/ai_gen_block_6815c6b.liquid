{% doc %}
  @prompt
    ok i want two images next to each other with words in the center of both with two buttons below, the images need to be larger and everything needs to be centered on the page

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-dual-image-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-dual-image-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.gap }}px;
    max-width: {{ block.settings.max_width }}px;
    width: 100%;
  }

  .ai-dual-image-item-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: {{ block.settings.image_height }}px;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    text-align: center;
  }

  .ai-dual-image-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-dual-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-dual-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-dual-image-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-dual-image-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    padding: 30px;
    color: {{ block.settings.text_color }};
    max-width: 90%;
  }

  .ai-dual-image-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 15px;
    line-height: 1.2;
  }

  .ai-dual-image-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 25px;
    line-height: 1.4;
  }

  .ai-dual-image-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 15px 30px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-dual-image-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-dual-image-container-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 15px;
    }

    .ai-dual-image-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.gap | times: 0.7 }}px;
    }

    .ai-dual-image-item-{{ ai_gen_id }} {
      min-height: {{ block.settings.image_height | times: 0.8 }}px;
    }

    .ai-dual-image-content-{{ ai_gen_id }} {
      padding: 25px;
    }

    .ai-dual-image-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-dual-image-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-dual-image-button-{{ ai_gen_id }} {
      padding: 12px 24px;
    }
  }
{% endstyle %}

<div class="ai-dual-image-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-dual-image-{{ ai_gen_id }}">
    <div class="ai-dual-image-item-{{ ai_gen_id }}">
      {% if block.settings.image_1 %}
        <img
          src="{{ block.settings.image_1 | image_url: width: 1200 }}"
          alt="{{ block.settings.image_1.alt | escape }}"
          class="ai-dual-image-background-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.image_1.width }}"
          height="{{ block.settings.image_1.height }}"
        >
      {% else %}
        <div class="ai-dual-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}<div class="ai-dual-image-overlay-{{ ai_gen_id }}"></div>
      <div class="ai-dual-image-content-{{ ai_gen_id }}">
        {% if block.settings.heading_1 != blank %}
          <h3 class="ai-dual-image-heading-{{ ai_gen_id }}">{{ block.settings.heading_1 }}</h3>
        {% endif %}
        {% if block.settings.text_1 != blank %}
          <p class="ai-dual-image-text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</p>
        {% endif %}
        {% if block.settings.button_text_1 != blank %}
          <a href="{{ block.settings.button_link_1 }}" class="ai-dual-image-button-{{ ai_gen_id }}">
            {{ block.settings.button_text_1 }}
          </a>
        {% endif %}
      </div>
    </div><div class="ai-dual-image-item-{{ ai_gen_id }}">
      {% if block.settings.image_2 %}
        <img
          src="{{ block.settings.image_2 | image_url: width: 1200 }}"
          alt="{{ block.settings.image_2.alt | escape }}"
          class="ai-dual-image-background-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.image_2.width }}"
          height="{{ block.settings.image_2.height }}"
        >
      {% else %}
        <div class="ai-dual-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
      
      <div class="ai-dual-image-overlay-{{ ai_gen_id }}"></div>
      
      <div class="ai-dual-image-content-{{ ai_gen_id }}">
        {% if block.settings.heading_2 != blank %}
          <h3 class="ai-dual-image-heading-{{ ai_gen_id }}">{{ block.settings.heading_2 }}</h3>
        {% endif %}
        {% if block.settings.text_2 != blank %}
          <p class="ai-dual-image-text-{{ ai_gen_id }}">{{ block.settings.text_2 }}</p>
        {% endif %}
        {% if block.settings.button_text_2 != blank %}
          <a href="{{ block.settings.button_link_2 }}" class="ai-dual-image-button-{{ ai_gen_id }}">
            {{ block.settings.button_text_2 }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

