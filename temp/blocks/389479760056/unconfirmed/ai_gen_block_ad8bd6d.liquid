{% doc %}
  @prompt
    do a split showcase with two images but have there be words in the center that are on top of the images and buttos below them, this needs to cover the entire width of the page, this is not centered on the page

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-showcase-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    min-height: {{ block.settings.section_height }}px;
    overflow: hidden;
    width: 100vw;
    margin-left: calc(50% - 50vw);
  }

  .ai-split-showcase-side-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .ai-split-showcase-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-split-showcase-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-split-showcase-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-split-showcase-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
  }

  .ai-split-showcase-content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: {{ block.settings.text_color }};
    z-index: 2;
    width: 90%;
    max-width: 500px;
  }

  .ai-split-showcase-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-split-showcase-subtext-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtext_size }}px;
    margin: 0 0 {{ block.settings.button_spacing }}px 0;
    line-height: 1.4;
  }

  .ai-split-showcase-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.button_gap }}px;
    justify-content: center;
    flex-wrap: wrap;}

  .ai-split-showcase-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .ai-split-showcase-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_color }};
    border-color: {{ block.settings.button_primary_bg }};
  }

  .ai-split-showcase-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_hover_bg }};
    color: {{ block.settings.button_primary_hover_color }};
    border-color: {{ block.settings.button_primary_hover_bg }};
  }

  .ai-split-showcase-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_bg }};
    color: {{ block.settings.button_secondary_color }};
    border-color: {{ block.settings.button_secondary_border }};
  }

  .ai-split-showcase-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_hover_bg }};
    color: {{ block.settings.button_secondary_hover_color }};
    border-color: {{ block.settings.button_secondary_hover_border }};
  }

  @media screen and (max-width: 768px) {
    .ai-split-showcase-{{ ai_gen_id }} {
      flex-direction: column;
      min-height: {{ block.settings.mobile_height }}px;}

    .ai-split-showcase-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-split-showcase-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_size | times: 0.9 }}px;
    }

    .ai-split-showcase-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
    }

    .ai-split-showcase-button-{{ ai_gen_id }} {
      width: 100%;
      max-width: 250px;
    }
  }
{% endstyle %}

<div class="ai-split-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-showcase-side-{{ ai_gen_id }}">
    {% if block.settings.left_image %}
      <img
        src="{{ block.settings.left_image | image_url: width: 1000 }}"
        alt="{{ block.settings.left_image.alt | escape }}"
        class="ai-split-showcase-image-{{ ai_gen_id }}"
        loading="lazy"width="{{ block.settings.left_image.width }}"
        height="{{ block.settings.left_image.height }}"
      >
    {% else %}
      <div class="ai-split-showcase-image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}<div class="ai-split-showcase-overlay-{{ ai_gen_id }}"></div>
  </div>

  <div class="ai-split-showcase-side-{{ ai_gen_id }}">
    {% if block.settings.right_image %}
      <img
        src="{{ block.settings.right_image | image_url: width: 1000 }}"
        alt="{{ block.settings.right_image.alt | escape }}"
        class="ai-split-showcase-image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.right_image.width }}"
        height="{{ block.settings.right_image.height }}"
      >
    {% else %}
      <div class="ai-split-showcase-image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
    <div class="ai-split-showcase-overlay-{{ ai_gen_id }}"></div>
  </div>

  <div class="ai-split-showcase-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-split-showcase-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.subtext != blank %}
      <div class="ai-split-showcase-subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</div>
    {% endif %}

    <div class="ai-split-showcase-buttons-{{ ai_gen_id }}">
      {% if block.settings.primary_btn_text != blank %}
        <a
          href="{{ block.settings.primary_button_link }}"
          class="ai-split-showcase-button-{{ ai_gen_id }} ai-split-showcase-button-primary-{{ ai_gen_id }}"
        >
          {{ block.settings.primary_btn_text }}
        </a>
      {% endif %}

      {% if block.settings.secondary_btn_text != blank %}
        <a
          href="{{ block.settings.secondary_button_link }}"
          class="ai-split-showcase-button-{{ ai_gen_id }} ai-split-showcase-button-secondary-{{ ai_gen_id }}"
        >
          {{ block.settings.secondary_btn_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

