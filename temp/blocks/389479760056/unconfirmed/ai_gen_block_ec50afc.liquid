{% doc %}
  @prompt
    please make me a custom footer. I want the left side to be a search bar with links to the different pages from the nav, then on the right a place for a logo and link to website and description, make the footer span the entire page, then add a copyright section below where a logo can be in the middle and links to social media, as well as payment logos, make this span the entire width of the page

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-custom-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .ai-custom-footer__main-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
  }

  .ai-custom-footer__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: start;
  }

  .ai-custom-footer__left-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-custom-footer__search-wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-custom-footer__search-form-{{ ai_gen_id }} {
    display: flex;
    border: 1px solid {{ block.settings.search_border_color }};
    border-radius: {{ block.settings.search_border_radius }}px;
    overflow: hidden;
  }

  .ai-custom-footer__search-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 12px 16px;
    border: none;
    background: {{ block.settings.search_background_color }};
    color: {{ block.settings.search_text_color }};
    font-size: 14px;
  }

  .ai-custom-footer__search-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.search_placeholder_color }};
  }

  .ai-custom-footer__search-input-{{ ai_gen_id }}:focus {
    outline: none;
  }

  .ai-custom-footer__search-button-{{ ai_gen_id }} {
    padding: 12px 16px;
    background: {{ block.settings.search_button_color }};
    color: {{ block.settings.search_button_text_color }};
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-custom-footer__search-button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.search_button_hover_color }};
  }

  .ai-custom-footer__nav-links-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-custom-footer__nav-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.nav_title_size }}px;
    font-weight: 600;
    margin: 0 0 8px 0;
    color: {{ block.settings.text_color }};
  }

  .ai-custom-footer__nav-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ai-custom-footer__nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_size }}px;
    transition: color 0.3s ease;
  }

  .ai-custom-footer__nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-custom-footer__right-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: flex-start;
  }

  .ai-custom-footer__logo-wrapper-{{ ai_gen_id }} {
    display: block;
  }

  .ai-custom-footer__logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
  }

  .ai-custom-footer__logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: 60px;
    background-color: {{ block.settings.text_color }};
    border-radius: 4px;
  }

  .ai-custom-footer__logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
  }

  .ai-custom-footer__website-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_size }}px;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .ai-custom-footer__website-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-custom-footer__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-custom-footer__copyright-{{ ai_gen_id }} {
    background-color: {{ block.settings.copyright_background_color }};
    border-top: 1px solid {{ block.settings.copyright_border_color }};
    padding: {{ block.settings.copyright_padding }}px 20px;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .ai-custom-footer__copyright-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 20px;
  }

  .ai-custom-footer__social-links-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    justify-self: start;
  }

  .ai-custom-footer__social-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.social_icon_size }}px;
    height: {{ block.settings.social_icon_size }}px;
    background-color: {{ block.settings.social_icon_background }};
    color: {{ block.settings.social_icon_color }};
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .ai-custom-footer__social-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.social_icon_hover_background }};
    color: {{ block.settings.social_icon_hover_color }};
    transform: translateY(-2px);
  }

  .ai-custom-footer__social-link-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.social_icon_size }}px * 0.5);
    height: calc({{ block.settings.social_icon_size }}px * 0.5);
  }

  .ai-custom-footer__copyright-logo-{{ ai_gen_id }} {
    justify-self: center;
  }

  .ai-custom-footer__copyright-logo-{{ ai_gen_id }} img {
    max-width: {{ block.settings.copyright_logo_width }}px;
    height: auto;
  }

  .ai-custom-footer__copyright-logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.copyright_logo_width }}px;
    height: 40px;
    background-color: {{ block.settings.copyright_text_color }};
    border-radius: 4px;
  }

  .ai-custom-footer__copyright-logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
  }

  .ai-custom-footer__payment-methods-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    justify-self: end;
    align-items: center;
  }

  .ai-custom-footer__payment-logo-{{ ai_gen_id }} {
    height: {{ block.settings.payment_logo_height }}px;
    width: auto;
    border-radius: 4px;
  }

  .ai-custom-footer__payment-placeholder-{{ ai_gen_id }} {
    width: 40px;
    height: {{ block.settings.payment_logo_height }}px;
    background-color: {{ block.settings.copyright_text_color }};
    border-radius: 4px;
    margin-right: 8px;
  }

  .ai-custom-footer__payment-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
  }

  .ai-custom-footer__copyright-text-{{ ai_gen_id }} {
    grid-column: 1 / -1;
    text-align: center;
    font-size: {{ block.settings.copyright_text_size }}px;
    color: {{ block.settings.copyright_text_color }};
    margin-top: 16px;
    opacity: 0.7;
  }

  @media screen and (max-width: 768px) {
    .ai-custom-footer__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .ai-custom-footer__right-{{ ai_gen_id }} {
      order: -1;
      align-items: center;
      text-align: center;
    }

    .ai-custom-footer__nav-list-{{ ai_gen_id }} {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      gap: 16px 24px;
    }

    .ai-custom-footer__copyright-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      text-align: center;gap: 16px;
    }

    .ai-custom-footer__social-links-{{ ai_gen_id }} {
      justify-self: center;order: 1;
    }

    .ai-custom-footer__copyright-logo-{{ ai_gen_id }} {
      order: 2;
    }

    .ai-custom-footer__payment-methods-{{ ai_gen_id }} {
      justify-self: center;
      order: 3;
    }

    .ai-custom-footer__copyright-text-{{ ai_gen_id }} {
      order: 4;
      margin-top: 16px;
    }
  }
{% endstyle %}<footer class="ai-custom-footer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-custom-footer__main-{{ ai_gen_id }}">
    <div class="ai-custom-footer__container-{{ ai_gen_id }}">
      <div class="ai-custom-footer__left-{{ ai_gen_id }}">
        <div class="ai-custom-footer__search-wrapper-{{ ai_gen_id }}">
          <form action="{{ routes.search_url }}" method="get" class="ai-custom-footer__search-form-{{ ai_gen_id }}">
            <input
              type="search"
              name="q"
              class="ai-custom-footer__search-input-{{ ai_gen_id }}"
              placeholder="{{ block.settings.search_placeholder }}"
              value="{{ search.terms | escape }}"
            >
            <button type="submit" class="ai-custom-footer__search-button-{{ ai_gen_id }}">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
            </button>
          </form>
        </div>

        <div class="ai-custom-footer__nav-links-{{ ai_gen_id }}">
          {% if block.settings.nav_title != blank %}
            <h3 class="ai-custom-footer__nav-title-{{ ai_gen_id }}">{{ block.settings.nav_title }}</h3>
          {% endif %}
          <ul class="ai-custom-footer__nav-list-{{ ai_gen_id }}">
            {% for link in linklists[block.settings.menu].links %}
              <li>
                <a href="{{ link.url }}" class="ai-custom-footer__nav-link-{{ ai_gen_id }}">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>

      <div class="ai-custom-footer__right-{{ ai_gen_id }}">
        {% if block.settings.website_url != blank %}
          <a href="{{ block.settings.website_url }}" class="ai-custom-footer__logo-wrapper-{{ ai_gen_id }}">
            {% if block.settings.logo %}
              <img
                src="{{ block.settings.logo | image_url: width: 400 }}"
                alt="{{ block.settings.logo.alt | default: shop.name | escape }}"
                class="ai-custom-footer__logo-{{ ai_gen_id }}"
                width="{{ block.settings.logo.width }}"
                height="{{ block.settings.logo.height }}"
                loading="lazy"
              >
            {% else %}
              <div class="ai-custom-footer__logo-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </a>
        {% else %}
          <div class="ai-custom-footer__logo-wrapper-{{ ai_gen_id }}">
            {% if block.settings.logo %}
              <img
                src="{{ block.settings.logo | image_url: width: 400 }}"
                alt="{{ block.settings.logo.alt | default: shop.name | escape }}"
                class="ai-custom-footer__logo-{{ ai_gen_id }}"
                width="{{ block.settings.logo.width }}"
                height="{{ block.settings.logo.height }}"
                loading="lazy"
              >
            {% else %}
              <div class="ai-custom-footer__logo-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if block.settings.website_url != blank and block.settings.website_text != blank %}
          <a href="{{ block.settings.website_url }}" class="ai-custom-footer__website-link-{{ ai_gen_id }}">
            {{ block.settings.website_text }}
          </a>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="ai-custom-footer__description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>

