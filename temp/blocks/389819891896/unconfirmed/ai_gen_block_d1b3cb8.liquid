{% doc %}
  @prompt
    Generate a section with header and then logo and section for website link

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-logo-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.alignment }};
  }

  .ai-logo-section__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-logo-section__header-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.header_spacing }}px 0;
    color: {{ block.settings.header_color }};
    font-size: {{ block.settings.header_size }}px;
  }

  .ai-logo-section__logo-container-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.logo_spacing }}px;
  }

  .ai-logo-section__logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: auto;
    display: inline-block;
  }

  .ai-logo-section__logo-placeholder-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
    height: 120px;
    display: inline-block;
    background-color: #f4f4f4;
    border-radius: 8px;
  }

  .ai-logo-section__logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 20px;
  }

  .ai-logo-section__website-link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: {{ block.settings.link_padding }}px {{ block.settings.link_padding | times: 1.5 }}px;
    background-color: {{ block.settings.link_background }};
    color: {{ block.settings.link_color }};
    text-decoration: none;
    border-radius: {{ block.settings.link_border_radius }}px;
    font-size: {{ block.settings.link_font_size }}px;
    transition: all0.3s ease;
    border: {{ block.settings.link_border_width }}px solid {{ block.settings.link_border_color }};
  }

  .ai-logo-section__website-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.link_hover_background }};
    color: {{ block.settings.link_hover_color }};
    transform: translateY(-2px);
  }

  .ai-logo-section__link-icon-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-logo-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.7 }}px 16px;
    }

    .ai-logo-section__header-{{ ai_gen_id }} {
      font-size: {{ block.settings.header_size | times: 0.8 }}px;
    }

    .ai-logo-section__logo-{{ ai_gen_id }},
    .ai-logo-section__logo-placeholder-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_width | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-logo-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-logo-section__container-{{ ai_gen_id }}">
    {% if block.settings.header_text != blank %}
      <h2 class="ai-logo-section__header-{{ ai_gen_id }}">
        {{ block.settings.header_text }}
      </h2>
    {% endif %}<div class="ai-logo-section__logo-container-{{ ai_gen_id }}">
      {% if block.settings.logo %}
        <img
          src="{{ block.settings.logo | image_url: width: 600 }}"
          alt="{{ block.settings.logo.alt | default: 'Company logo' | escape }}"
          class="ai-logo-section__logo-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.logo.width }}"
          height="{{ block.settings.logo.height }}"
        >
      {% else %}
        <div class="ai-logo-section__logo-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    {% if block.settings.website_url != blank %}
      <a
        href="{{ block.settings.website_url }}"
        class="ai-logo-section__website-link-{{ ai_gen_id }}"
        {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
      >
        {% if block.settings.show_link_icon %}
          <svg
            class="ai-logo-section__link-icon-{{ ai_gen_id }}"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
          </svg>
        {% endif %}
        {{ block.settings.link_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Logo & Website Link",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header text",
      "default": "Visit Our Website"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "url",
      "id": "website_url",
      "label": "Website URL"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "Visit Website"
    },
    {
      "type": "checkbox",
      "id": "open_in_new_tab",
      "label": "Open link in new tab",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_link_icon",
      "label": "Show link icon",
      "default": true
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section padding",
      "default": 50
    },
    {
      "type": "range",
      "id": "header_spacing",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Header bottom spacing",
      "default": 30
    },
    {
      "type": "range",
      "id": "logo_spacing",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Logo bottom spacing",
      "default": 25
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 100,
      "max": 400,
      "step": 10,
      "unit": "px",
      "label": "Logo max width",
      "default": 200
    },
    {
      "type": "header",
      "content": "Header Style"
    },
    {
      "type": "range",
      "id": "header_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Header font size",
      "default": 32
    },
    {
      "type": "color",
      "id": "header_color",
      "label": "Header color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Link Style"
    },
    {
      "type": "range",
      "id": "link_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Link font size",
      "default": 16
    },
    {
      "type": "range",
      "id": "link_padding",
      "min": 8,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Link padding",
      "default": 12
    },
    {
      "type": "range",
      "id": "link_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Link border radius",
      "default": 6
    },
    {
      "type": "range",
      "id": "link_border_width",
      "min": 0,
      "max": 4,
      "step": 1,
      "unit": "px",
      "label": "Link border width",
      "default": 1
    },
    {
      "type": "color",
      "id": "link_background",
      "label": "Link background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_border_color",
      "label": "Link border color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "link_hover_background",
      "label": "Link hover background",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link hover text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Section Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Logo & Website Link"
    }
  ],
  "tag": null
}
{% endschema %}