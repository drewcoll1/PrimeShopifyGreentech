{% doc %}
  @prompt
    I need a section to display my collections in cards, it is very important to me that the collections are centered on every media screen width

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collections-grid-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: {{ block.settings.grid_gap }}px;
    padding: {{ block.settings.section_padding }}px 20px;
    max-width: 100%;
  }

  .ai-collection-card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: 100%;
    max-width: {{ block.settings.card_max_width }}px;
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-collection-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .ai-collection-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    overflow: hidden;
  }

  .ai-collection-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-collection-card-{{ ai_gen_id }}:hover .ai-collection-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-collection-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    text-align: center;
  }

  .ai-collection-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .ai-collection-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 16px 0;
    line-height: 1.5;
  }

  .ai-collection-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 10px 20px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-collection-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
  }

  .ai-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-empty-state-message-{{ ai_gen_id }} {
    font-size: 16px;
    margin-bottom: 8px;
  }

  .ai-empty-state-hint-{{ ai_gen_id }} {
    font-size: 14px;
    opacity: 0.7;
  }

  @media screen and (min-width: 550px) {
    .ai-collection-card-{{ ai_gen_id }} {
      width: calc(50% - {{ block.settings.grid_gap | divided_by: 2 }}px);
    }
  }

  @media screen and (min-width: 990px) {
    .ai-collection-card-{{ ai_gen_id }} {
      width: calc({{ 100.0 | divided_by: block.settings.columns_desktop }}% - {{ block.settings.grid_gap | times: block.settings.columns_desktop | minus: block.settings.grid_gap | divided_by: block.settings.columns_desktop }}px);
    }
  }

  @media screen and (max-width: 549px) {
    .ai-collections-grid-{{ ai_gen_id }} {
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }
    
    .ai-collection-card-{{ ai_gen_id }} {
      width: 100%;
      max-width: 400px;
    }
  }
{% endstyle %}

<div class="ai-collections-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.collection_list.size > 0 %}
    {% for collection in block.settings.collection_list %}
      <div class="ai-collection-card-{{ ai_gen_id }}">
        <div class="ai-collection-image-wrapper-{{ ai_gen_id }}">
          {% if collection.featured_image %}
            <img
              src="{{ collection.featured_image | image_url: width: 600 }}"
              alt="{{ collection.featured_image.alt | escape }}"
              class="ai-collection-image-{{ ai_gen_id }}"
              loading="lazy"
              width="600"
              height="{{ block.settings.image_height }}"
            >
          {% else %}
            <div class="ai-collection-placeholder-{{ ai_gen_id }}">
              {{ 'collection-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        
        <div class="ai-collection-content-{{ ai_gen_id }}">
          <h3 class="ai-collection-title-{{ ai_gen_id }}">{{ collection.title }}</h3>
          
          {% if collection.description != blank and block.settings.show_description %}
            <p class="ai-collection-description-{{ ai_gen_id }}">
              {{ collection.description | truncate: 120 }}
            </p>
          {% endif %}
          
          <a href="{{ collection.url }}" class="ai-collection-link-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        </div>
      </div>
    {% endfor %}
  {% else %}
    <div class="ai-empty-state-{{ ai_gen_id }}">
      <div class="ai-empty-state-message-{{ ai_gen_id }}">No collections selected</div>
      <div class="ai-empty-state-hint-{{ ai_gen_id }}">Choose collections to display in the theme editor</div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Collection cards",
  "settings": [
    {
      "type": "header",
      "content": "Collections"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections",
      "limit": 12
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View collection"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show collection description",
      "default": true
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Columns on desktop",
      "default": 3
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 10,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Gap between cards",
      "default": 20
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section padding",
      "default": 40
    },
    {
      "type": "header",
      "content": "Card style"
    },
    {
      "type": "range",
      "id": "card_max_width",
      "min": 200,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Maximum card width",
      "default": 350
    },
    {
      "type": "range",
      "id": "card_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Card border radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "card_padding",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Card padding",
      "default": 20
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card background",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 150,
      "max": 400,
      "step": 10,
      "unit": "px",
      "label": "Image height",
      "default": 250
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 20
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "description_font_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Description size",
      "default": 14
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Button border radius",
      "default": 4
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_background_color",
      "label": "Button hover background",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "Collection cards"
    }
  ]
}
