{% doc %}
  @prompt
    I need a collection header with only the breadcrumb in it and option to manipulate the size and boldness

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-header-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};}

  .ai-collection-header__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-header__breadcrumb-{{ ai_gen_id }} {
    font-size: {{ block.settings.breadcrumb_size }}px;
    font-weight: {{ block.settings.breadcrumb_weight }};
    color: {{ block.settings.breadcrumb_color }};
    line-height: 1.4;
  }

  .ai-collection-header__breadcrumb-{{ ai_gen_id }} a {
    color: {{ block.settings.breadcrumb_link_color }};text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-collection-header__breadcrumb-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.breadcrumb_link_hover_color }};
    text-decoration: underline;
  }

  .ai-collection-header__breadcrumb-separator-{{ ai_gen_id }} {
    margin: 0 8px;
    color: {{ block.settings.breadcrumb_separator_color }};
  }

  .ai-collection-header__breadcrumb-current-{{ ai_gen_id }} {
    color: {{ block.settings.breadcrumb_current_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-collection-header__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-collection-header__breadcrumb-{{ ai_gen_id }} {
      font-size: {{ block.settings.breadcrumb_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-collection-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-header__container-{{ ai_gen_id }}">
    <nav class="ai-collection-header__breadcrumb-{{ ai_gen_id }}" aria-label="Breadcrumb"><a href="{{ routes.root_url }}">{{ block.settings.home_text }}</a>
      
      {% if collection %}
        <span class="ai-collection-header__breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator_symbol }}</span>
        <span class="ai-collection-header__breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ collection.title }}</span>
      {% elsif blog %}
        <span class="ai-collection-header__breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator_symbol }}</span>
        <span class="ai-collection-header__breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ blog.title }}</span>
      {% elsif page %}
        <span class="ai-collection-header__breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator_symbol }}</span>
        <span class="ai-collection-header__breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ page.title }}</span>
      {% elsif product %}
        {% if product.collections.size > 0 %}
          <span class="ai-collection-header__breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator_symbol }}</span><a href="{{ product.collections.first.url }}">{{ product.collections.first.title }}</a>
          <span class="ai-collection-header__breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator_symbol }}</span>
        {% else %}
          <span class="ai-collection-header__breadcrumb-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator_symbol }}</span>
        {% endif %}
        <span class="ai-collection-header__breadcrumb-current-{{ ai_gen_id }}" aria-current="page">{{ product.title }}</span>
      {% endif %}
    </nav>
  </div>
</div>

