{% doc %}
  @prompt
    I need a collection header with only the breadcrumb in it and option to manipulate the size and boldness, I need the words larger, also the option to adjust section height, the entire section adjust height not just the breadcrumb

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-header-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.section_height }}px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-breadcrumb-{{ ai_gen_id }} {
    font-size: {{ block.settings.breadcrumb_size }}px;
    font-weight: {{ block.settings.breadcrumb_weight }};
    color: {{ block.settings.text_color }};
    line-height: 1.2;
  }

  .ai-breadcrumb-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-breadcrumb-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-breadcrumb-separator-{{ ai_gen_id }} {
    margin: 0 8px;
    color: {{ block.settings.separator_color }};
  }

  .ai-breadcrumb-current-{{ ai_gen_id }} {
    color: {{ block.settings.current_page_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-collection-header-{{ ai_gen_id }} {
      height: {{ block.settings.section_height | times: 0.7 }}px;
      padding: 0 15px;
    }

    .ai-breadcrumb-{{ ai_gen_id }} {
      font-size: {{ block.settings.breadcrumb_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-collection-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <nav class="ai-breadcrumb-{{ ai_gen_id }}" aria-label="Breadcrumb"><a href="{{ routes.root_url }}">{{ block.settings.home_text }}</a>
    
    {% if collection %}
      <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator_text }}</span><span class="ai-breadcrumb-current-{{ ai_gen_id }}">{{ collection.title }}</span>
    {% elsif blog %}
      <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator_text }}</span>
      <span class="ai-breadcrumb-current-{{ ai_gen_id }}">{{ blog.title }}</span>
    {% elsif article %}
      <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator_text }}</span><a href="{{ blog.url }}">{{ blog.title }}</a>
      <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator_text }}</span>
      <span class="ai-breadcrumb-current-{{ ai_gen_id }}">{{ article.title }}</span>
    {% elsif product %}
      {% if product.collections.size > 0 %}
        <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator_text }}</span><a href="{{ product.collections.first.url }}">{{ product.collections.first.title }}</a>
        <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator_text }}</span>
        <span class="ai-breadcrumb-current-{{ ai_gen_id }}">{{ product.title }}</span>
      {% else %}
        <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator_text }}</span>
        <span class="ai-breadcrumb-current-{{ ai_gen_id }}">{{ product.title }}</span>
      {% endif %}
    {% elsif page %}
      <span class="ai-breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.separator_text }}</span>
      <span class="ai-breadcrumb-current-{{ ai_gen_id }}">{{ page.title }}</span>
    {% endif %}
  </nav>
</div>

