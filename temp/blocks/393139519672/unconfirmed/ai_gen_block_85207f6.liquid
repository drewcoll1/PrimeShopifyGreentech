{% doc %}
  @prompt
    ok I want a display section for my collections

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collections-display-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-collections-display__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collections-display__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-collections-display__title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-collections-display__subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0;
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-collections-display__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-collections-display__card-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.card_background }};
    transition: transform 0.3s ease;
  }

  .ai-collections-display__card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-collections-display__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-collections-display__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collections-display__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-collections-display__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collections-display__overlay-{{ ai_gen_id }} {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 100%
    );
    display: flex;
    align-items: flex-end;
    padding: 24px;
  }

  .ai-collections-display__content-{{ ai_gen_id }} {
    color: white;
    text-align: left;
  }

  .ai-collections-display__collection-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.collection_title_size }}px;
    font-weight: 600;
    margin: 0 0 8px;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  .ai-collections-display__collection-count-{{ ai_gen_id }} {
    font-size: 14px;
    opacity: 0.9;
    margin: 0;text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  .ai-collections-display__card-link-{{ ai_gen_id }} {
    position: absolute;
    inset: 0;
    z-index: 2;
    text-decoration: none;
  }

  .ai-collections-display__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-collections-display__empty-title-{{ ai_gen_id }} {
    font-size: 24px;
    margin: 0 0 16px;
    color: #333;
  }

  .ai-collections-display__empty-text-{{ ai_gen_id }} {
    font-size: 16px;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-collections-display__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-collections-display__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-collections-display__overlay-{{ ai_gen_id }} {
      padding: 16px;
    }

    .ai-collections-display__collection-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.collection_title_size | times: 0.85 }}px;
    }
  }
{% endstyle %}<div
  class="ai-collections-display-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collections-display__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtext != blank %}
      <div class="ai-collections-display__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-collections-display__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtext != blank %}
          <p class="ai-collections-display__subtitle-{{ ai_gen_id }}">{{ block.settings.subtext }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collections != blank %}
      <div class="ai-collections-display__grid-{{ ai_gen_id }}">
        {% for collection in block.settings.collections %}
          <div class="ai-collections-display__card-{{ ai_gen_id }}">
            <a
              href="{{ collection.url }}"
              class="ai-collections-display__card-link-{{ ai_gen_id }}"
              aria-label="View {{ collection.title }} collection"></a>

            <div class="ai-collections-display__image-wrapper-{{ ai_gen_id }}">
              {% if collection.featured_image %}
                <img
                  src="{{ collection.featured_image | image_url: width: 600 }}"
                  alt="{{ collection.featured_image.alt | escape }}"
                  class="ai-collections-display__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="{{600 | divided_by: block.settings.image_aspect_ratio | round }}"
                >
              {% else %}
                <div class="ai-collections-display__image-placeholder-{{ ai_gen_id }}">
                  {{ 'collection-1' | placeholder_svg_tag }}
                </div>
              {% endif %}<div class="ai-collections-display__overlay-{{ ai_gen_id }}">
                <div class="ai-collections-display__content-{{ ai_gen_id }}">
                  <h3 class="ai-collections-display__collection-title-{{ ai_gen_id }}">
                    {{ collection.title }}
                  </h3>
                  {% if block.settings.show_product_count %}
                    <p class="ai-collections-display__collection-count-{{ ai_gen_id }}">
                      {{ collection.products_count }}
                      {% if collection.products_count == 1 %}
                        product
                      {% else %}
                        products
                      {% endif %}
                    </p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-collections-display__empty-state-{{ ai_gen_id }}">
        <h3 class="ai-collections-display__empty-title-{{ ai_gen_id }}">No collections selected</h3>
        <p class="ai-collections-display__empty-text-{{ ai_gen_id }}">
          Choose collections to display in the block settings
        </p>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Collections display",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by collection"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover our curated collections"
    },
    {
      "type": "collection_list",
      "id": "collections",
      "label": "Collections",
      "limit": 8
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show product count",
      "default": true
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columns on desktop",
      "default": 3
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on mobile",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "2"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 10,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Grid gap",
      "default": 20
    },
    {
      "type": "select",
      "id": "image_aspect_ratio",
      "label": "Image aspect ratio",
      "options": [
        {
          "value": "1",
          "label": "Square (1:1)"
        },
        {
          "value": "1.33",
          "label": "Landscape (4:3)"
        },
        {
          "value": "1.78",
          "label": "Widescreen (16:9)"
        },
        {
          "value": "0.75",
          "label": "Portrait (3:4)"
        }
      ],
      "default": "1.33"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "card_border_radius",
      "min": 0,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Card border radius",
      "default": 8
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "Card background",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 40
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 32
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "collection_title_size",
      "min": 16,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Collection title size",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Collections display"
    }
  ]
}
{% endschema %}