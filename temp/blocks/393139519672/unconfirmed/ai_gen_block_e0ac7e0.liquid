{% doc %}
  @prompt
    ok I want a display section for my collections, I want there to be cards for each collection all of them should be on the page

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collections-display-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px0;
  }

  .ai-collections-display__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collections-display__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom:40px;
  }

  .ai-collections-display__title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-collections-display__subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0;
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-collections-display__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-collections-display__card-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.card_background }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-collections-display__card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .ai-collections-display__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};overflow: hidden;
  }

  .ai-collections-display__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;transition: transform 0.3s ease;
  }

  .ai-collections-display__card-{{ ai_gen_id }}:hover .ai-collections-display__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-collections-display__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-collections-display__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collections-display__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-collections-display__collection-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.collection_title_size }}px;
    font-weight: 600;
    margin: 0 0 8px;
    color: {{ block.settings.collection_title_color }};
    line-height: 1.3;
  }

  .ai-collections-display__collection-description-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.collection_text_color }};
    margin: 0 0 12px;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-collections-display__collection-count-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.collection_meta_color }};
    margin: 0 0 16px;
    font-weight: 500;text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-collections-display__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: 10px 20px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid {{ block.settings.button_border_color }};
  }

  .ai-collections-display__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};transform: translateY(-1px);
  }

  .ai-collections-display__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    grid-column: 1 / -1;
  }

  .ai-collections-display__empty-title-{{ ai_gen_id }} {
    font-size: 24px;
    margin: 0 0 16px;
    color: #333;
  }

  .ai-collections-display__empty-text-{{ ai_gen_id }} {
    font-size: 16px;
    margin: 0;}

  @media screen and (max-width: 749px) {
    .ai-collections-display__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-collections-display__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-collections-display__content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
    }

    .ai-collections-display__collection-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.collection_title_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-collections-display-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collections-display__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtext != blank %}
      <div class="ai-collections-display__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-collections-display__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtext != blank %}
          <p class="ai-collections-display__subtitle-{{ ai_gen_id }}">{{ block.settings.subtext }}</p>
        {% endif %}
      </div>
    {% endif %}<div class="ai-collections-display__grid-{{ ai_gen_id }}">
      {% if collections.size > 0 %}
        {% for collection in collections %}
          {% unless collection.handle == 'frontpage' %}
            <div class="ai-collections-display__card-{{ ai_gen_id }}">
              <div class="ai-collections-display__image-wrapper-{{ ai_gen_id }}">
                {% if collection.featured_image %}
                  <img
                    src="{{ collection.featured_image | image_url: width: 600}}"
                    alt="{{ collection.featured_image.alt | escape }}"
                    class="ai-collections-display__image-{{ ai_gen_id }}"loading="lazy"
                    width="600"
                    height="{{600 | divided_by: block.settings.image_aspect_ratio | round }}"
                  >
                {% else %}
                  <div class="ai-collections-display__image-placeholder-{{ ai_gen_id }}">
                    {{ 'collection-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-collections-display__content-{{ ai_gen_id }}">
                <h3 class="ai-collections-display__collection-title-{{ ai_gen_id }}">
                  {{ collection.title }}
                </h3>

                {% if collection.description != blank and block.settings.show_description %}
                  <p class="ai-collections-display__collection-description-{{ ai_gen_id }}">
                    {{ collection.description | strip_html | truncate: 100 }}
                  </p>
                {% endif %}

                {% if block.settings.show_product_count %}
                  <p class="ai-collections-display__collection-count-{{ ai_gen_id }}">
                    {{ collection.products_count }}{% if collection.products_count == 1 %}
                      product
                    {% else %}
                      products
                    {% endif %}
                  </p>
                {% endif %}

                <a
                  href="{{ collection.url }}"
                  class="ai-collections-display__button-{{ ai_gen_id }}"
                >
                  {{ block.settings.button_text }}
                </a>
              </div>
            </div>
          {% endunless %}
        {% endfor %}
      {% else %}
        <div class="ai-collections-display__empty-state-{{ ai_gen_id }}"><h3 class="ai-collections-display__empty-title-{{ ai_gen_id }}">No collections found</h3>
          <p class="ai-collections-display__empty-text-{{ ai_gen_id }}">
            Create collections in your admin to display them here
          </p>
        </div>
      {% endif %}
    </div>
  </div>
</div>

