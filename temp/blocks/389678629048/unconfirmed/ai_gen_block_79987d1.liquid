{% doc %}
  @prompt
    give me a custom collection header with words to the left, I just want header on the left with options to manipulate it, I need to adjust the height of the entire section, also if possobile show the route to the page so home/men

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-header-{{ ai_gen_id }} {
    min-height: {{ block.settings.section_height }}px;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.vertical_alignment }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-collection-header__breadcrumb-{{ ai_gen_id }} {
    font-size: {{ block.settings.breadcrumb_size }}px;
    color: {{ block.settings.breadcrumb_color }};
    margin-bottom: {{ block.settings.breadcrumb_bottom_margin }}px;text-transform: {{ block.settings.breadcrumb_text_transform }};
  }

  .ai-collection-header__breadcrumb-{{ ai_gen_id }} a {
    color: {{ block.settings.breadcrumb_link_color }};text-decoration: none;
  }

  .ai-collection-header__breadcrumb-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.breadcrumb_link_hover_color }};text-decoration: underline;
  }

  .ai-collection-header__breadcrumb-separator-{{ ai_gen_id }} {
    margin: 0 {{ block.settings.breadcrumb_separator_spacing }}px;
    color: {{ block.settings.breadcrumb_color }};
  }

  .ai-collection-header__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin:0 0 {{ block.settings.title_bottom_margin }}px;
    line-height: {{ block.settings.title_line_height }};
    font-weight: {{ block.settings.title_font_weight }};
    {% if block.settings.title_text_transform == 'uppercase' %}
      text-transform: uppercase;
    {% endif %}
    {% if block.settings.title_letter_spacing != 0 %}
      letter-spacing: {{ block.settings.title_letter_spacing }}px;
    {% endif %}
  }

  .ai-collection-header__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: {{ block.settings.description_line_height }};
    margin: 0;
    max-width: {{ block.settings.description_max_width }}px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-collection-header-{{ ai_gen_id }} {
      min-height: {{ block.settings.section_height | times: 0.7 }}px;
    }

    .ai-collection-header__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-collection-header__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;max-width: 100%;
    }

    .ai-collection-header__breadcrumb-{{ ai_gen_id }} {
      font-size: {{ block.settings.breadcrumb_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<div class="ai-collection-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_breadcrumb %}
    <nav class="ai-collection-header__breadcrumb-{{ ai_gen_id }}" aria-label="Breadcrumb"><a href="{{ routes.root_url }}">{{ block.settings.home_text }}</a>
      <span class="ai-collection-header__breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.breadcrumb_separator }}</span>
      
      {% if collection %}
        <span>{{ collection.title }}</span>
      {% elsif page %}
        <span>{{ page.title }}</span>
      {% elsif blog %}
        <span>{{ blog.title }}</span>
      {% elsif article %}
        <a href="{{ blog.url }}">{{ blog.title }}</a><span class="ai-collection-header__breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.breadcrumb_separator }}</span>
        <span>{{ article.title }}</span>
      {% elsif product %}
        {% if product.collections.first %}
          <a href="{{ product.collections.first.url }}">{{ product.collections.first.title }}</a>
          <span class="ai-collection-header__breadcrumb-separator-{{ ai_gen_id }}">{{ block.settings.breadcrumb_separator }}</span>
        {% endif %}
        <span>{{ product.title }}</span>
      {% else %}
        <span>{{ block.settings.current_page_text }}</span>
      {% endif %}
    </nav>
  {% endif %}

  {% if block.settings.title != blank %}
    <h1 class="ai-collection-header__title-{{ ai_gen_id }}">
      {{ block.settings.title }}
    </h1>
  {% endif %}

  {% if block.settings.description != blank %}
    <div class="ai-collection-header__description-{{ ai_gen_id }}">
      {{ block.settings.description }}
    </div>
  {% endif %}
</div>

