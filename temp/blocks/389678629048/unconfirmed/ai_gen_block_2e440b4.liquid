{% doc %}
  @prompt
    give me a custom collection header with words to the left, I just want header on the left with options to manipulate it

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-header-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-collection-header__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_bottom_margin }}px;line-height: {{ block.settings.title_line_height }};
    font-weight: {{ block.settings.title_font_weight }};
    {% if block.settings.title_text_transform == 'uppercase' %}
      text-transform: uppercase;
    {% endif %}
    {% if block.settings.title_letter_spacing !=0 %}
      letter-spacing: {{ block.settings.title_letter_spacing }}px;
    {% endif %}
  }

  .ai-collection-header__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: {{ block.settings.description_line_height }};
    margin: 0;
    max-width: {{ block.settings.description_max_width }}px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-collection-header__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-collection-header__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;max-width: 100%;
    }
  }
{% endstyle %}

<div class="ai-collection-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.title != blank %}
    <h1 class="ai-collection-header__title-{{ ai_gen_id }}">
      {{ block.settings.title }}
    </h1>
  {% endif %}

  {% if block.settings.description != blank %}
    <div class="ai-collection-header__description-{{ ai_gen_id }}">
      {{ block.settings.description }}
    </div>
  {% endif %}
</div>

